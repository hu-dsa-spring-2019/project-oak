create_list('ProcessedDatasetNew.csv')


addressD=input('Do you want to delete any location? ')
vanD=int(input('From which van? '))


def deletingNodes(addressD,vanD):
    for i in file1[vanD]:
        if i[0]==addressD:
            file1[vanD].remove(i)
    bubble_sort2(file1[vanD])
    align(file1[vanD])            
    print(file1[vanD])

deletingNodes(addressD,vanD)
        
