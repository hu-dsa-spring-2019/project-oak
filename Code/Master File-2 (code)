def create_list(doc):
    file = open(doc, 'r')
    c = 0
    for x in file:
        if c is 0:
            c += 1
            pass
        else:
            a = x[1:-2].split()
            b = a[0]
            d = int(b)
            if d not in file1:
                file1[d] = []
                file1[d].append(a[1:])
            else:
                file1[d].append(a[1:])
                # elif i > 0 and len(x.split()) - i > 4:
